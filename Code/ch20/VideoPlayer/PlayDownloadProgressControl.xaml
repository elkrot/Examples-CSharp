<UserControl x:Class="VideoPlayer.PlayDownloadProgressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Line x:Name="DownloadProgress" X1="0" Y1="0" X2="0" Y2="0" Stroke="DarkGray" Canvas.Left="0" Canvas.Top="2" StrokeThickness="3"/>
        <Line x:Name="PlaybackProgress" X1="0" Y1="0" X2="0" Y2="0" Stroke="DarkGreen" Canvas.Left="0" Canvas.Top="2" StrokeThickness="3"/>
    </Canvas>
</UserControl>
