<UserControl x:Class="SketchPad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="2" BorderBrush="LightGray" CornerRadius="2" Margin="2">
            <Canvas x:Name="canvas">

            </Canvas>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="buttonClear" Content="Clear" Margin="2" Click="buttonClear_Click"/>
            <Button x:Name="buttonPrint" Content="Print" Margin="2" Click="buttonPrint_Click" />
        </StackPanel>
    </Grid>
</UserControl>
